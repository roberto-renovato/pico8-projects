pico-8 cartridge // http://www.pico-8.com
version 39
__lua__
function _init()
	navx=60
	navy=60
	navvelx=0
	navvely=0
	navspr=2
	vel=.5
end

function _update60()
	navvelx=0
	navvely=0
	navspr=2
	if btn(0) then
		navvelx=-vel
		navspr=1
	end
	if btn(1) then
		navvelx=vel
		navspr=3
	end
	if btn(2) then navvely=-vel end
	if btn(3) then navvely=vel end
	navx+=navvelx
	navy+=navvely
end

function _draw()
	cls()
	spr(navspr,navx,navy)
	spr(4,navx,navy+8)
end
